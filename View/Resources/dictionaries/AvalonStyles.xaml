<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:folding="clr-namespace:ICSharpCode.AvalonEdit.Folding;assembly=ICSharpCode.AvalonEdit">
    <Style TargetType="{x:Type folding:FoldingMargin}">
        <Setter Property="FoldingMarkerBackgroundBrush" Value="#565B7A" />
        <Setter Property="FoldingMarkerBrush" Value="#565B7A" />
        <Setter Property="SelectedFoldingMarkerBackgroundBrush" Value="White" />
        <Setter Property="SelectedFoldingMarkerBrush" Value="White" />
    </Style>


</ResourceDictionary>